<div class="container">
  <div class="row">

    <div class="col-xs-6">
      <div class="card text-white rounded float-left card-img" id="top">
        <%= link_to image_tag("meals_dashboard.jpg", :class => "card-img"), meals_path %>
        <div class="card-img-overlay">
          <h5 class="card-title"><%= link_to "Your Meals", meals_path, :class => "no-link" %></h5>
