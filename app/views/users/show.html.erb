  </div>

  <div class="row justify-content-end">
    <div class="col-xs-6">
      <div class="card text-white rounded float-left card-img" id="bottom">
        <%= link_to image_tag("calculation_dashboard.jpg", :class => "card-img" ), ingredients_path %>
        <div class="card-img-overlay">
          <h5 class="card-title"><%= link_to "Stock Calculation", users_summary_path, :class => "no-link" %></h5>
