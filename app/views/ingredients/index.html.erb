<div class="row">
  <div class="col-md-2">
    <h1>Ingredients In Stock</h1>
  </div>
  <div class="col-md-2">
    <%= link_to "Add An Ingredient", new_ingredient_path %>
  </div>
</div>

<div class="row">

  <div class="col-md-2">
    <h5>Ingredient</h5>
  </div>

  <div class="col-md-2">
    <h5>Quantity in Stock</h5>
  </div>

  <div class="col-md-2">
    <h5>Quantity Required</h5>
  </div>

  <div class="col-md-2">
    <h5>Supplier</h5>
  </div>

  <div class="col-md-2">
    <h5>Price</h5>
  </div>

  <div class="col-md-2">
    <h5>Atomic Unit</h5>
  </div>

</div>

<% @current_user.ingredients.each do |ingredient| %>

  <div class="ingredientsIndex">

    <div class="row">

      <div class="col-md-2">
        <%= link_to ingredient.name, ingredient %>
      </div>

      <div class="col-md-2">
        <%= pluralize ingredient.quantity_in_stock, ingredient.unit_of_measurement %>
      </div>

      <div class="col-md-2">
        <%= pluralize ingredient.quantity_required, ingredient.unit_of_measurement %>
      </div>

      <div class="col-md-2">
        <% if ingredient.supplier_url.present? %>
          <%= link_to(ingredient.supplier, ingredient.supplier_url) %>
        <% else %>
          <%= ingredient.supplier_email %>
        <% end %>
      </div>

      <div class="col-md-2">
        <%= "#{number_to_currency ingredient.price} / #{ingredient.unit_of_measurement}" %>
      </div>

      <div class="col-md-2">
        <%= pluralize ingredient.atomic_unit, ingredient.unit_of_measurement %>
      </div>

    </div>

    <div class="controls">
      <div class="row">
        <%= link_to "Edit", edit_ingredient_path(ingredient) %>
        <%= button_to "Delete", ingredient, :method => 'delete'%>
      </div>
    </div>

  </div>

<% end %>


<p>Ingredients#index</p>
